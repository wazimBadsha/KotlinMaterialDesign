<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTheme">
        <attr name="colorPrimary" format="color"/>
        <attr name="colorPrimaryWhite" format="color"/>
        <attr name="primaryTextColor" format="color"/>
        <attr name="secondaryTextColor" format="color"/>
        <attr name="dividerColor" format="color"/>
        <attr name="backgroundCardColor" format="color"/>
        <attr name="iconPlaceholder" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EllipsizeEndTextView">
        <attr name="maxLines" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="etv_animationDuration" format="integer" />
        <attr name="etv_collapsedLines" format="integer" />
        <attr name="etv_expandedLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="WeekView">
        <attr name="wv_backgroundColor" format="reference|color"/>
        <attr name="wv_verticalPadding" format="reference|dimension"/>
        <attr name="wv_horizontalPadding" format="reference|dimension"/>
        <attr name="wv_animDuration" format="reference|integer"/>
    </declare-styleable>


    <declare-styleable name="AutoCompleteLocation">
        <attr name="background_layout"
            format="integer"/>
        <attr name="hint_text"
            format="string"/>
        <attr name="hint_text_color"
            format="color"/>
        <attr name="text_color"
            format="color"/>
    </declare-styleable>

    <declare-styleable name="RibbonView">

        <attr name="ribbonFillColor" format="color" />
        <attr name="ribbonStrokeColor" format="color" />
        <attr name="ribbonStrokeWidth" format="dimension" />
        <attr name="ribbonArcLength" format="integer" />
        <attr name="ribbonGravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="right" value="1"></enum>
        </attr>


        <!--<attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>-->
    </declare-styleable>


</resources>